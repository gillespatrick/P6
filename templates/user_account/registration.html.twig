{% extends 'base.html.twig' %}

{% block title %}REGISTRAION
{% endblock %}

{% block body %}


	<div class="container mt-5">

		<div class="jumbotron" style="background-image: url(/images/3.png)">

			<p class="lead text-warning"></p>

		</div><br>


	</div>


	<div class="row">
		<div class="col-md-3">&nbsp;</div>
		<div class="col-md-6">

			<div class="bg-light py-3 px-3">
				<h1>
					Create your account</h1><br>

				{{ form_start(form)}}
				{{ form_widget(form)}}
				<button type="submit" class="btn btn-success btn-lg">
					<i class="fas fa-user-shield"></i>
					Create Account</button>

				<a href="{{ path ('login_user')}}" class="btn btn-info btn-lg">
					<i class="fas fa-user-check"></i>
					Already an Account
				</a>
				{{form_end(form)}}

			</div>
		</div>


	</div>

</div>{% endblock %}
