{% extends 'base.html.twig' %}

{% block title %}NEW TRICK
{% endblock %}

{% form_theme form _self %}

{% block body %}

	<div class="container ">
		<div class="container mt-5">
			<div class="jumbotron " style="background-image: url(/images/create_1.png)">

				<h1 class="display-3"></h1>


			</div>

			<header class="masthead bg-primary text-white text-center " style="background-image: url(/images/f638457f0a44fbe463b39f1d01fd35b2.jpeg)"></header><br><br>


			<div class="row">
				<div class="col-md-3">&nbsp;</div>
				<div class="col-md-6">

					<div class="bg-light py-3 px-3">

						<h1>
							Add New Trick
						</h1>

						<hr><br>
						{{ form_start(form)}}

						{{ form_widget(form)}}
						<button type="submit" class="btn btn-success btn-lg">


							<i class="fas fa-save"></i>
							Save...


						</button>

						{{ form_end(form)}}


					</div>

				{% endblock %}

				{% block _trick_media_widget %}
					<p>
						There you most add your own pictures</p>

					{{form_widget(form)}}

					<input type="hidden" id="widgets-counter" value="0">
					<div class="form-group">
						<button type="button" id="add_media" class="btn btn-primary ">
							<i class="fas fa-plus-square"></i>
						</button>
					</div>
				{% endblock %}


				{% block _trick_media_entry_row %}
					{{ form_widget(form)}}

				{% endblock %}

				{# Entry_Type of MediaType#}

				{% block _trick_media_entry_widget %}

					<div class="form-group" id="block_{{id}}">


						<div class="row">
							<div class="col-10">
								<div class="row">
									<div class="col">
										{{ form_widget(form.urlVideo)}}
										{{ form_errors(form.urlVideo)}}</div>

									<div class="col">{{ form_widget(form.picture)}}
										{{ form_errors(form.picture)}}</div>
									<div class="col-2">
										<button type="button" data-action="delete" data-target="#block_{{id}}" id="add_media" class="btn btn-danger ">
											<i class="far fa-trash-alt"></i>
										</button>
									</div>
								</div>

							</div>


						</div>


					</div>

				{% endblock %}

				{% block javascripts %}

					<script>
						$('#add_media').click(function () { // const index = $('#trick_media div.form-group').length;
const index = + $('#widgets-counter').val();


const temp = $('#trick_media').data('prototype').replace(/__name__/g, index);
$('#trick_media').append(temp);
$('#widgets-counter').val(index + 1);

// Manage delete Button
handleDeleteButton();
});


function handleDeleteButton() {
$('button[data-action= "delete"]').click(function () {
const target = this.dataset.target;
$(target).remove();
});
}
handleDeleteButton();
					</script>

				</div>
			</div>


		</div>


	{% endblock %}
